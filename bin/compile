#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>
set -eu
set -o noclobber
set -o pipefail

BUILD_DIR=${1:-}
#CACHE_DIR=${2:-}
#ENV_DIR=${3:-}

echo "-----> Copying SPA"
cd "$BUILD_DIR/vscode"
npm run compile:webapp

if [ ! -f "$BUILD_DIR/dashboard/core/static/spa/trace/main.css" ]; then
    echo "       Stylesheet for SPA was not compiled"
    exit 1
fi
if [ ! -f "$BUILD_DIR/dashboard/core/static/spa/trace/main.js" ]; then
    echo "       JavaScript for SPA was not compiled"
    exit 2
fi
exit 0
